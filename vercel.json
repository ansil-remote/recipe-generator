{
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node",
      "config": { 
        "includeFiles": ["api/**"],
        "supportsResponseStreaming": true
      }
    }
  ],
  "routes": [
    { "src": "/api/generate", "dest": "/api/generate.js" },
    { "src": "/(.*)", "dest": "public/index.html" }
  ],
  "outputDirectory": "public"
}
